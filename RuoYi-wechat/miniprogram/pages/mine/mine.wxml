<!--pages/info/info.wxml-->
<view class="container">
  <!-- 顶部展示图 -->
  <view class="top-show">
    <image mode="widthFix" class="top-show-img" src="/assets/images/banner.jpg"></image>
  </view>

  <view class="bottom-show">
    <!-- 未登录面板 -->
    <view wx:if="{{ !token }}" class="user-container section" bindtap="toLoginPage">
      <view class="avatar-container">
        <image src="/assets/images/avatar.png"></image>
        <view class="no-login">
          <text class="ellipsis">未登录</text>
          <text>点击授权登录</text>
        </view>
      </view>
    </view>

    <!-- 登录以后得面板 -->
    <view wx:else class="user-container section">
      <view class="avatar-container">
        <image src="/assets/images/avatar.png"></image>
        <view class="no-login">
          <text class="ellipsis">{{ userInfo.userName }}</text>
        </view>
        <view class="red" bind:tap="exit">退出</view>
      </view>
    </view>

    <!-- 订单面板 -->
    <view class="order section">
      <view class="order-title-wrap">
        <text class="title">个人中心</text>
      </view>
      <view class="order-content-wrap">
        <view class="order-content-item" wx:for="{{ initpanel }}" wx:key="index">
          <navigator url="{{ token ? item.url : '/pages/login/login' }}">
            <view class="iconfont {{ item.iconfont }}"></view>
            <text>{{ item.title }}</text>
          </navigator>
        </view>
      </view>
    </view>

    <view class="order section" wx:if="{{ admin == 1 || userInfo.admin == 1}}">
      <view class="order-title-wrap">
        <text class="title">后台管理</text>
      </view>
      <view class="order-content-wrap">
        <view class="order-content-item" wx:for="{{ initAdminPanel }}" wx:key="index">
          <navigator url="{{ token ? item.url : '/pages/login/login' }}">
            <view class="iconfont {{ item.iconfont }}"></view>
            <text>{{ item.title }}</text>
          </navigator>
        </view>
        <view class="order-content-item" wx:for="{{ initSuPanel }}" wx:key="index"
          wx:if="{{userInfo.userName =='sys'}}">
          <navigator url="{{ token ? item.url : '/pages/login/login' }}">
            <view class="iconfont {{ item.iconfont }}"></view>
            <text>{{ item.title }}</text>
          </navigator>
        </view>
      </view>
    </view>



    <!-- 提示面板 -->
    <view class="after-scale section">
      <view class="order-title-wrap">
        <text class="title">温馨提示</text>
      </view>
      <view class="after-scale-item">
        <view class="iconfont icon-kefufenxiermaikefu"></view>
        <text>非涉密平台，禁止上传、存储涉密信息</text>
      </view>
      <view class="after-scale-item">
        <view class="iconfont icon-shijian"></view>
        <text>更改用户角色后需要重新登录，相应用户才生效</text>
      </view>
      <view class="after-scale-item">
        <view class="iconfont icon-dizhiguanli"></view>
        <text>为保护您的安全，请定期修改密码</text>
      </view>
      <view class="after-scale-item">
        <view class="iconfont icon-zhangben"></view>
        <text>及时禁用离职的客服账号</text>
      </view>
    </view>

    <!-- 底部面板 -->
    <view class="info-footer"> 技术支持 </view>
    <view class="info-footer"> jiancai.zhong@email.cn </view>

  </view>
</view>